    <!-- FILTERS COLUMN -->
    <div id="filters" class="col-lg-3 col-sm-10 mx-auto">
        <!-- FILTERS CARD -->
        <div class="card" style="width: 100%;">
            <div class="card-body">
                <!-- TITLE -->
                <h5 class="card-title">Shop by Category</h5>
                <hr>
                <!-- CATEGORIES -->
                <div><a id="categoryLink" href="#" class="card-link">All Products</a></div>
